<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ChangeFolderIcon.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChangeFolderIcon"
    xmlns:controls="using:ChangeFolderIcon.UserControls.WindowControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ChangeFolderIcon">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <controls:CustomTitleBar x:Name="CustomTitleBarControl" Grid.Row="0"  VerticalAlignment="Top" Height="32"/>
        <NavigationView x:Name="NavView"
                        SelectionChanged="NavView_SelectionChanged"
                        Grid.Row="1"
                        Margin="0,2,0,0"
                        PaneDisplayMode="Left"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="False"
                        IsPaneToggleButtonVisible="False"
                        CompactModeThresholdWidth="48"
                        OpenPaneLength="280">

            <NavigationView.PaneCustomContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="PaneToggleButtonColum" Width="*"/>
                            <ColumnDefinition x:Name="SelectFolderButtonColum" Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <!-- 自定义导航按钮 -->
                        <Button x:Name="PaneToggleButton"
                                Grid.Column="0"
                                Click="PaneToggleButton_Click"
                                Width="48"
                                Height="48"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,0,2,0">
                            <FontIcon Glyph="&#xE700;" FontSize="16"/>
                        </Button>

                        <!-- 选择文件夹按钮 -->
                        <Button x:Name="SelectFolderButton"
                                Grid.Column="1"
                                Click="SelectFolderButton_Click"
                                Height="48"
                                Margin="2,0,4,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Left">
                            <Button.Content>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 图标总是显示 -->
                                    <FontIcon Grid.Column="0"
                                              Glyph="&#xED25;" 
                                              FontSize="20"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>

                                    <!-- 文字内容，仅在展开时显示 -->
                                    <StackPanel Grid.Column="1" 
                                                VerticalAlignment="Center"
                                                x:Name="SelectFolderButtonText">
                                        <TextBlock Text="选择根文件夹" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="14"/>
                                        <TextBlock Text="浏览并选择文件夹" 
                                                   FontSize="11" 
                                                   Opacity="0.8"/>
                                    </StackPanel>
                                </Grid>
                            </Button.Content>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1">
                        <!-- 分隔线 -->
                        <Border Height="1" 
                                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                Margin="8,8,8,8"
                                x:Name="DividerLine"/>
                    </Grid>
                </Grid>
                
            </NavigationView.PaneCustomContent>

            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="NavigationViewTip" IsEnabled="False">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE946;"/>
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.Content>
                        <TextBlock Text="尚未选择文件夹"/>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="关于" Icon="ViewAll" />
                <NavigationViewItem Content="帮助" Icon="Help" />
            </NavigationView.FooterMenuItems>

            <!-- 右侧内容区域 -->
            <Frame x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>
</Window>